<div class="container room-show">
    <div class="row">
        <div class="room-show-detail">
            <%= image_tag @room.room_image.url, class: "room-image" %>
            <div class="room-show-detail-content">
                <div class="room-show-detail-icon">       
                    <%= image_tag @room.user.user_image.url, :alt => 'アイコン', class: "host-icon" %>
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name">
                        <%= @room.room_name %>
                    </p>
                    <p class="room-show-profile-address">
                        <%= @room.room_address %>
                    </p>
                    <p class="room-show-detail-introduction">
                        <%= @room.room_introduction %>
                    </p>
                </div>
                <div class="room-show-nav">
                    <h5 class="price-icon">
                        ￥ <%= @room.room_price %> / 日
                    </h5>
                </div>
            </div>
        </div>
    </div> 
</div>
 <%= form_with model: @reservation, url: reservations_confirm_path, local: true do |f| %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, class: "input-area" %>
            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, class: "input-area" %>
            <%= f.label :people_number, "宿泊人数" %>
            <%= f.number_field :people_number, class: "input-area" %>
            <%= f.submit"予約する", class: "btn" %>
    <%end%>
